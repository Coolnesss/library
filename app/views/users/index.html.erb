<div class="container grid-lg">
  <h1>Administer users</h1>
  <div class="columns">
    <div class="column centered">
    
    <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td><%= link_to "Change password", edit_user_path(user), class: "btn btn-sm btn-warning" %></td>
              <td><%= link_to "Destroy", user, method: :delete, class: "btn btn-danger btn-sm", data: {confirm: "Are you sure?"} %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    
    </div>
  </div>
</div>