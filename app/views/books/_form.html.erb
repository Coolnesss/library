
<div class="container grid-lg">
  <div class="columns">
    <div class="column centered">
      <%= form_for @book, html: { multipart: true } do |f| %>
        <div class="form-group">
            <% if action_name == 'new' %>
              <p class='text-center'> Some empty fields will be autofilled after you upload a PDF, and click submit. <br> Then, fill in the rest of the fields and submit again to publish the book. </p>
            <% end %>
            <%= f.label :attachment, "PDF", class:"form-label" %>
            <%= f.file_field :attachment, class:"form-input" %>
            
            <div class="divider"></div>

            <%= f.label :name, "نالو", class:"form-label sindhi bold" %>
            <%= f.text_field :name, class:"form-input sindhi", dir: "rtl", placeholder: "نالو" %>

            <%= f.label :name_eng, "Title", class:"form-label" %>
            <%= f.text_field :name_eng, class:"form-input", placeholder: "Title" %>

            <%= f.label :isbn, "ISBN number", class:"form-label" %>
            <%= f.text_field :isbn, class:"form-input", placeholder: "ISBN" %>
            
            <%= f.label :author_sindhi, "ليکڪ / مرتب", class:"form-label sindhi" %>
            <%= f.text_field :author_sindhi, class:"form-input sindhi", dir: "rtl", placeholder: "ليکڪ / مرتب" %>

            <%= f.label :author, "Author / Editor", class:"form-label" %>
            <%= f.text_field :author, class:"form-input", placeholder: "Author / Editor" %>

            <%= f.label :translator, "Translator", class:"form-label" %>
            <%= f.text_field :translator, class:"form-input", placeholder: "Translator" %>

            <%= f.label :translator_sindhi, "مترجم", class:"form-label sindhi" %>
            <%= f.text_field :translator_sindhi, class:"form-input sindhi", dir: "rtl", placeholder: "مترجم" %>

            <%= f.label :language, "Language", class:"form-label" %>
            <%= f.select :language, LanguageHelper.languages, {include_blank: "Select a language"}, class:"form-select" %>

            <%= f.label :publisher, "Publisher", class:"form-label" %>
            <%= f.text_field :publisher, class:"form-input", placeholder: "Publisher" %>

            <%= f.label :description_sindhi, "تعارف", class:"form-label sindhi bold" %>
            <%= f.text_area :description_sindhi, class:"form-input sindhi", placeholder: "Sindhi description", dir: "rtl" %>

            <%= f.label :description_eng, "Intro", class:"form-label" %>
            <%= f.text_area :description_eng, class:"form-input", placeholder: "English description" %>

            <%= f.label :year, "Year", class:"form-label" %>
            <%= f.number_field :year, class:"form-input", placeholder: "Year" %>

            
            <br>

            
            Tags: <div class="tags" id="tags"> </div>
          
            <br>
            <label class="form-label" for="addNewTag">Add a new tag (press enter to add)</label>
            <input class="form-input" id="addNewTag">

            <div class="actions">
              <br>
              <%= f.submit "Submit", class: "btn btn-primary" %>
            </div>
            <br>
        </div>
      <% end %>
    </div>
  </div>
</div>
